<.simple_form :let={f} for={@changeset} action={@action}>
  <.error :if={@changeset.action}>
    Oops, something went wrong! Please check the errors below.
  </.error>
  <.input field={f[:name]} type="text" label="Name" />
  <.input
    field={f[:storage_type_ids]}
    type="checkbox"
    multiple={true}
    options={
      Enum.map(@storage_types, fn storage_type ->
        {storage_type.name, storage_type.id}
      end)
    }
    label="Storage Types"
  />

  <:actions>
    <.button>Save Test feature</.button>
  </:actions>
</.simple_form>

<%= inspect(@storage_types) %>
